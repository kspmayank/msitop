<p id="notice"><%= notice %></p>

<h1>Listing Left Sidebars</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @left_sidebars.each do |left_sidebar| %>
      <tr>
        <td><%= left_sidebar.content.truncate(50) %></td>
        <td><%= link_to 'Show', left_sidebar %></td>
        <td><%= link_to 'Edit', edit_left_sidebar_path(left_sidebar) %></td>
        <td><%= link_to 'Destroy', left_sidebar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

