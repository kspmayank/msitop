	      	<%end%>
	      </ul>
	    <div class="col-md-1"></div>
	    </div><!-- /.navbar-collapse -->

	    <div class="container">
	    <!-- <div class="col-md-1"></div> -->
	    <div class="col-md-9">
	    	<h3><img src="/msit.png" height="75" width="80" alt="Maharaja Surajmal Institute of Technology" title="Maharaja Surajmal Institute of Technology">
	    	Maharaja Surajmal Institute of Technology | Affiliated to GGSIPU</h3>
